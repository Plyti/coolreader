<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/lbl_position"
			style="@style/TextAppearance.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dip"
			android:maxLines="3"
			android:singleLine="false"
			android:text="Page 34/1024 (25%) Chapter 1" />

		<TableLayout
			android:id="@+id/rg_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<RadioButton
					android:id="@+id/rb_comment"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true"
					android:layout_weight="1"
					android:text="@string/dlg_bookmark_type_comment" />

				<RadioButton
					android:id="@+id/rb_correction"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
					android:layout_weight="1"
					android:text="@string/dlg_bookmark_type_correction" />
			</TableRow>
			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<RadioButton
					android:id="@+id/rb_internal_link"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
					android:layout_weight="1"
					android:text="@string/dlg_bookmark_internal_link" />

				<RadioButton
					android:id="@+id/rb_user_dic"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
					android:layout_weight="1"
					android:text="@string/dlg_bookmark_user_dic" />
			</TableRow>
		</TableLayout>

		<TextView
			android:id="@+id/lbl_selection_text"
			style="@style/TextAppearance.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="3"
			android:singleLine="false"
			android:text="@string/dlg_bookmark_edit_range_text" />

		<EditText
			android:id="@+id/position_text"
			style="@style/TextAppearance.Widget.EditText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="none"
			android:singleLine="false"
			android:text="position text" />

		<TextView
			android:id="@+id/lbl_comment_text"
			style="@style/TextAppearance.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="3"
			android:clickable="true"
			android:singleLine="false"
			android:text="@string/dlg_bookmark_edit_comment" />

		<EditText
			android:id="@+id/comment_edit"
			style="@style/TextAppearance.Widget.EditText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:editable="true"
			android:singleLine="false"
			android:text="comment text" />
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/layout_clear_hist"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="false"
			android:layout_marginTop="3dip"
			android:layout_marginBottom="3dip"
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			>
			<ImageButton android:id="@+id/set_comment_from_cb"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:src="?attr/cr3_button_ok_drawable"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:background="@null"
				android:contentDescription="@string/set_comment_from_cb"/>
			<TextView
				android:id="@+id/lbl_comment_from_cb_capt"
				style="@style/TextAppearance.Medium"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="3"
				android:singleLine="true"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:text="@string/set_comment_from_cb_capt" />
		</LinearLayout>
		<TextView
			android:id="@+id/lbl_comment_from_cb"
			style="@style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="3"
			android:singleLine="false"
			android:clickable="true"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginTop="3dip"
			android:layout_marginBottom="3dip"
			android:layout_marginLeft="2dip"
			android:layout_marginRight="2dip"
			android:text="@string/set_comment_from_cb" />
	</LinearLayout>
</ScrollView>