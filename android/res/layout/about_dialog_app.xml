<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout android:layout_width="fill_parent" android:id="@+id/LinearLayout02"
	    android:layout_margin="2dip"
		android:layout_height="wrap_content">
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" 
	        android:layout_margin="8dip"
			android:id="@+id/logo" 
			android:src="?attr/attr_cr3_logo" android:layout_gravity="center_vertical|left">
		</ImageView>
		<LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="fill_parent">
			<TextView android:text="Cool Reader 3.1" android:id="@+id/version" android:layout_width="fill_parent" 
	            style="@style/TextAppearance.Medium"
		        android:gravity="left"
		        android:layout_margin="2dip"
				android:layout_height="wrap_content">
			</TextView>
			<TextView android:text="@string/dlg_about_copyright" android:id="@+id/copyright"
		            style="@style/TextAppearance.Medium"
                    android:gravity="left"
					android:layout_margin="2dip" 
					android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="@string/dlg_about_contributors_" android:id="@+id/copyright2"
					  style="@style/TextAppearance.Small"
					  android:gravity="left"
					  android:layout_margin="2dip"
					  android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:text="coolreader.org@gmail.com" android:id="@+id/email"
            	style="@style/TextAppearance.Medium"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="email"/>
			<TextView android:text="http://www.coolreader.org/" android:id="@+id/www"
            	style="@style/TextAppearance.Medium"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="web"/>
			<TextView android:text="http://sourceforge.net/projects/crengine" android:id="@+id/sourceforge"
            	style="@style/TextAppearance.Medium"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="web"/>
			<TextView android:text="https://github.com/buggins/coolreader/" android:id="@+id/www1"
				style="@style/TextAppearance.Medium"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="web"/>
			<TextView android:text="Third party components used: zlib, libpng, libjpeg, freetype, harfbuzz, chmlib, antiword, Nook EPD utils by DairyKnight"
				android:id="@+id/thirdparty"
            	style="@style/TextAppearance.Small"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="Farm-Fresh icon set from http://www.fatcow.com/free-icons"
            	android:id="@+id/thirdparty2"
            	style="@style/TextAppearance.Small"
            	android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="CoffeeCatch> library: https://github.com/xroche/coffeecatch"
            	android:id="@+id/thirdparty3"
            	style="@style/TextAppearance.Small"
            	android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="Metro vector icon set by"
				android:id="@+id/thirdparty6"
				style="@style/TextAppearance.Small"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="https://icons8.com" android:id="@+id/www_icons8"
				style="@style/TextAppearance.Small"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="web"/>
			<TextView android:text="With the help of code examples from projects (dictionary popup windows, book shortcuts): FBReader, Librera, AlReader"
				android:id="@+id/thirdparty4"
				style="@style/TextAppearance.Small"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:text="MainIcon icon made by https://www.flaticon.com/authors/vectors-market is licensed by Creative Commons BY 3.0"
				android:id="@+id/thirdparty5"
				style="@style/TextAppearance.Small"
				android:layout_margin="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
